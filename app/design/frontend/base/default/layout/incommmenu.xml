<layout>

    <!-- layout handle
        This layout handle is a unique layou handle which will be generated and
        processed by Magento when anyone requests `heloworld`.
        So anything that comes under this layout handle will get added to the
        layout update by Magento.
    -->
    <itep_incomm_index_index>

        <!-- use to change the page layout template -->
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>

        <!-- adding `ITEP_Incomm_Block_Hello` block to the layout,
             so that it will show up the `hello world` message to the world
        -->
        <reference name="content">
            <block type="itep_incomm/hello" name="helloworld.block" template="test/example.phtml" />
        </reference>
    </itep_incomm_index_index>
</layout>